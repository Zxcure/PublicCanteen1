<Window x:Class="PublicCanteen.Windows.AddDishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PublicCanteen.Windows"
        mc:Ignorable="d"
        Title="AddDishWindow" 
        WindowStartupLocation="CenterScreen"
        Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление блюда"
                   FontSize="32"
                   HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel Grid.Row="1"
            Margin="8">
                <Border Width="300"
            Height="200"
            BorderThickness="1"
            BorderBrush="Gray"
            CornerRadius="16">
                    <!-- Здесь будет изображение -->
                </Border>

                <Button x:Name="btnAddImage" 
            Content="Добавить изображение"
            Width="300"
            Height="30"
            Margin="8"
            Click="btnAddImage_Click"/>

                <TextBlock Text="Наименование"
               HorizontalAlignment="Center"
               FontSize="22"
               Margin="8"/>

                <TextBox Text="Введите название блюда"
             Width="300"
             Height="30"
             Margin="8"/>

                <TextBlock Text="Описание"
               HorizontalAlignment="Center"
               FontSize="22"
               Margin="8"/>

                <TextBox Text="Введите описание блюда"
             Width="300"
             Height="30"
             Margin="8"/>

                <TextBlock Text="Цена"
               HorizontalAlignment="Center"
               FontSize="22"
               Margin="8"/>

                <TextBox Text="Введите цену блюда"
             Width="300"
             Height="30"
             Margin="8"/>

                <TextBlock Text="Масса"
               HorizontalAlignment="Center"
               FontSize="22"
               Margin="8"/>

                <TextBox Text="Введите массу блюда"
             Width="300"
             Height="30"
             Margin="8"/>

                <TextBlock Text="Категория"
               HorizontalAlignment="Center"
               FontSize="22"
               Margin="8"/>

                <ComboBox Text="Веберите категороию блюда"
             Width="300"
             Height="30"
             Margin="8"/>

            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Window>
