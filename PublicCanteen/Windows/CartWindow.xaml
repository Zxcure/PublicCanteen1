<Window x:Class="PublicCanteen.Windows.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PublicCanteen.Windows"
        mc:Ignorable="d"
        Title="CartWindow" 
        WindowStartupLocation="CenterScreen" 
        Height="600" Width="800">
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            
                <TextBlock Text="Корзина" 
                           Margin="10" 
                           FontSize="20"/>

                <Button x:Name="btnBackToList"
                        Content="Назад"
                        Width="100"
                        Height="30"
                        HorizontalAlignment="Right"
                        Margin="0 0 10 0"
                        Click="btnBackToList_Click"/>
            

                <ListView x:Name="lvCategoryDish" 
                          Grid.Row="2" 
                          d:ItemsSource="{d:SampleData ItemCount=5}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1"
                                  BorderBrush="Gray">
                                <TextBlock Text="{Binding NameCategory}"
                                         Margin="5 0"/>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>


            <ListView x:Name="LvDishCart" 
                Grid.Row="3" 
                d:ItemsSource="{d:SampleData ItemCount=5}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray"
                          BorderThickness="2"
                          Width="200"
                          Height="300"
                          Margin="16"
                          CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            <StackPanel>

                                <Image Source="{Binding PhotoDish}" 
         Height="100"
         Width="180" 
         Margin="8">
                                </Image>

                                <TextBlock Text="{Binding NameDish}"
         FontSize="18"
         Margin="5 3"/>
                                <TextBlock Text="{Binding PriceDish}"
         FontSize="18"
         Margin="5 3"/>
                                <TextBlock Text="{Binding DiscrDish}"
         FontSize="18"
         Margin="5 3"
         TextWrapping="Wrap" 
             FontFamily="Arial Rounded MT Bold"/>
                            </StackPanel>
                            <WrapPanel Grid.Row="1" 
                                       HorizontalAlignment="Center">
                                <WrapPanel>
                                    <Button x:Name="btnMinus" 
Content="-"
Width="20"
Margin="5"
FontSize="18"
VerticalContentAlignment="Center"
Click="btnMinus_Click"/>

                                    <TextBlock Text="{Binding CountDish}"
   Margin="5"
   Width="20"
   FontSize="18"/>

                                    <Button x:Name="btnPlus" 
Content="+"
Margin="5"
Width="20"                                                
FontSize="18"
VerticalContentAlignment="Center"
Click="btnPlus_Click"/>
                                </WrapPanel>
                            </WrapPanel>
                        </Grid>
                            

                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        <TextBlock x:Name="txtSumma"
                   Grid.Row="4"
                   FontSize="24"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0 0 40 0"
                   Text="321"/>

        <Button x:Name="btnBuy" 
                Grid.Row="5"
                Height="60"
                FontSize="16"
                Content="Оформить покупку"
                Width="200"
                HorizontalAlignment="Right"
                Margin="0 0 10 0"
                Background="#FF1CAC78"
                Click="btnBuy_Click"/>
    </Grid>
 
</Window>
