<Window x:Class="PublicCanteen.Windows.ListOfDishesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PublicCanteen.Windows"
        mc:Ignorable="d"
        Title="ListOfDishesWindow" 
        WindowStartupLocation="CenterScreen"
        Height="600" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Список блюд" 
                       Margin="10" 
                       FontSize="20"/>

            <TextBlock Grid.Row="1" 
                       Text="категории блюд" 
                       Margin="10" 
                       FontSize="20"/>
            
            <WrapPanel Grid.Row="2" HorizontalAlignment="Center">
                
                <ListView x:Name="lvCategoryDish" 
                          d:ItemsSource="{d:SampleData ItemCount=5}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1"
                                    BorderBrush="Gray">
                                <TextBlock Text="{Binding NameCategory}"
                                           Margin="5 0"/>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </WrapPanel>



            <ListView x:Name="LvDish" 
                  Grid.Row="3" 
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray"
                            BorderThickness="2"
                            Width="200"
                            Height="300"
                            Margin="16"
                            CornerRadius="8">
                            <StackPanel>
                                
                                <Image Source="{Binding PhotoDish}" 
                                       Height="100"
                                       Width="180" 
                                       Margin="8">
                                </Image>

                                <TextBlock Text="{Binding NameDish}"
                                       FontSize="18"
                                       Margin="5 3"/>
                                <TextBlock Text="{Binding PriceDish}"
                                       FontSize="18"
                                       Margin="5 3"/>
                                <TextBlock Text="{Binding DiscrDish}"
                                       FontSize="18"
                                       Margin="5 3"
                                       TextWrapping="Wrap" 
                                           FontFamily="Arial Rounded MT Bold"/>

                                <WrapPanel HorizontalAlignment="Center">
                                    <Button x:Name="btnAddToCart"
                                            Width="40"
                                            Height="40"
                                            HorizontalAlignment="Left"
                                            Margin="30 5 0 0"
                                            Background="{x:Null}"
                                            BorderThickness="0"
                                            Click="btnAddToCart_Click">
                                        <Image Source="/Images/cart.png"/>
                                    </Button>
                                </WrapPanel>

                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </Grid>
</Window>
